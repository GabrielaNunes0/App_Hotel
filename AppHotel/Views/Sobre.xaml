<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppHotel.Views.Sobre"
             Title="Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Black}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand"
                         Padding="20"
                         Spacing="15">

        <Label Text="Sobre o Aplicativo"
               FontFamily="Hegarty"
               FontSize="36"
               TextColor="{StaticResource PrimaryDark}"
               HorizontalOptions="Center" />

        <Frame Padding="15"
               CornerRadius="20"
               BackgroundColor="{StaticResource SecondaryBackground}">
            <VerticalStackLayout Spacing="10">

                <Label Text="Desenvolvido por:"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PrimaryDark}" />

                <Label Text="Gabriela Nunes"
                       TextColor="{StaticResource SecondaryDarkText}"
                       FontSize="18" />

                <Label Text="Ano de desenvolvimento:"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PrimaryDark}" />

                <Label Text="2025"
                       TextColor="{StaticResource SecondaryDarkText}"
                       FontSize="18" />

                <Label Text="Aplicativo desenvolvido como parte do projeto AppHotel, utilizando .NET MAUI."
                       FontSize="14"
                       TextColor="{StaticResource SecondaryDarkText}"
                       HorizontalTextAlignment="Center"
                       Margin="0,10,0,0"/>
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
